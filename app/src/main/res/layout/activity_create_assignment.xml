<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruhin.helploopapp.CreateAssignmentActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_assign_toolbar"
        android:background="#6200EE"
        android:layout_alignParentTop="true">
    </android.support.v7.widget.Toolbar>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/create_assign_toolbar">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:paddingRight="24dp"
           android:paddingLeft="24dp">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Assignment Info"
               android:textColor="#333"
               android:layout_marginTop="8dp"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/assign_info"
               android:hint="enter assignment info"
               android:layout_marginTop="3dp"/>
           <TextView
               android:textColor="#333"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Class"
               android:layout_marginTop="3dp"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="enter class"
               android:id="@+id/assign_class"
               android:layout_marginTop="3dp"/>
           <TextView
               android:textColor="#333"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Details"
               android:layout_marginTop="3dp"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="enter details"
               android:maxLines="2"
               android:id="@+id/create_assign_details"
               android:layout_marginTop="3dp"/>
           <DatePicker
               android:layout_width="300dp"
               android:layout_height="420dp"
               android:layout_gravity="center"
               android:datePickerMode="calendar"
               android:layout_marginTop="3dp"
               android:id="@+id/datePicker">
           </DatePicker>
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Confirm"
               android:id="@+id/confirm_assign_btn"
               android:layout_marginTop="8dp"
               android:background="#ffa751"
               android:layout_marginBottom="20dp"/>
       </LinearLayout>
   </ScrollView>


</RelativeLayout>
